<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="150dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".LoginActivity"
    tools:showIn="@layout/activity_login">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/tv_Usuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="UsuÃ¡rio"
                    android:textColor="@color/colorRecifeCoffee"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edit_Usuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="1"
                    android:textColorHighlight="@color/colorRecifeCoffee"
                    android:textColorHint="@color/colorRecifeCoffee"
                    android:textColorLink="@color/colorRecifeCoffee"
                    tools:textColor="@color/colorRecifeCoffee"
                    android:lines="1"
                    android:inputType="textAutoComplete"
                    android:imeActionLabel="Enter"
                    android:imeOptions="actionGo"/>

                <TextView
                    android:id="@+id/tv_Senha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Senha"
                    android:textColor="@color/colorRecifeCoffee"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edit_Senha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="1"
                    android:textColorLink="@color/colorRecifeCoffee"
                    tools:textColor="@color/colorRecifeCoffee"
                    android:lines="1"
                    android:inputType="textPassword"
                    android:imeActionLabel="Login"
                    android:imeOptions="actionDone"/>

                <Button
                    android:id="@+id/btn_Login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@color/colorRecifeCoffee"
                    android:text="Login"
                    android:textAlignment="center"
                    android:textColor="@color/colorTextRecifeCoffee"
                    android:textSize="18dp" />
        </LinearLayout>

</android.support.constraint.ConstraintLayout>